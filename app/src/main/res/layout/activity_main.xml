<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/edtTxtNomeFabricante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Digite o nome do fabricante" />

    <Button
        android:id="@+id/btnInserirFabricante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/btnInserirFabricant" />

    <Button
        android:id="@+id/btnConsultarFabricante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/btnConsultarFabricant" />

    <TextView
        android:id="@+id/txtViewRespostaRequisicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/txtViewRespostaRequisicao" />

    <EditText
        android:id="@+id/edtResposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="text" />

    <ListView
        android:id="@+id/listViewFabricante"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>